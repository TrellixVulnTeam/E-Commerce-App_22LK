<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/a2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backadminmaintain"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="3dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/product_name_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="product name"
                android:fontFamily="@font/poppins_blackitalic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/raduis_lay">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image_d"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:fontFamily="@font/poppins_re"
                    android:id="@+id/product_cate_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/et_shadows"
                    android:gravity="center"
                    android:hint="product category"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="18sp"
/>

                <EditText
                    android:fontFamily="@font/poppins_re"
                    android:id="@+id/product_name_d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/et_shadows"
                    android:gravity="center"
                    android:textColorHint="@color/black"

                    android:hint="product name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:fontFamily="@font/poppins_black"
                    android:id="@+id/product_price_d1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="price "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                     />

                <EditText
                    android:id="@+id/product_price_d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/et_shadows"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:fontFamily="@font/poppins_re"
                    android:hint="product price"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="italic" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/product_desc_d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="product description : "
            android:textColor="@color/black"
            android:textSize="22dp"
            android:fontFamily="@font/poppins_black"
            tools:ignore="NotSibling" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_desc_d1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/unfilled_sqar"

            >

            <EditText

                android:id="@+id/product_desc_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_desc_d1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/et_shadows"
                android:gravity="start"
                android:hint="product desc"
                android:fontFamily="@font/poppins_re"

                android:inputType="textMultiLine|textLongMessage"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp"
                android:textStyle="italic"
                tools:ignore="NotSibling" />
        </RelativeLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/et_sh5"
        android:padding="15dp"
        android:fontFamily="@font/poppins_blackitalic"
        android:text="Update product details"
        android:textSize="16sp" />

</RelativeLayout>