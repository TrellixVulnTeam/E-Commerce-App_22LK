<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/raduis2">

        <ImageView
            android:id="@+id/backreg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/poppins_blackitalic"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/product_name_d3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Mohi Store\nRegistration "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mohi Store"
        android:gravity="center"
            android:fontFamily="@font/poppins_blackitalic"
            android:layout_marginTop="65dp"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="50dp"
        android:background="@drawable/et_sh4"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"
        />

        <EditText
            android:id="@+id/register_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/et_sh4"
            android:hint="Enter Your Name..."
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="12dp"
            android:textColor="@color/a2"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_percson"
            android:drawablePadding="12dp"
            android:elevation="9dp"
            />

        <EditText
            android:id="@+id/register_num_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/et_sh4"
            android:hint="Enter Your Email..."
            android:inputType="textEmailAddress"
            android:ems="10"
            android:padding="12dp"
            android:textColor="@color/a2"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="12dp"
            android:elevation="9dp"
            />

        <EditText
            android:id="@+id/register_pass_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/et_sh4"
            android:hint="Enter Your Password..."
            android:inputType="textPassword"
            android:ems="10"
            android:padding="12dp"
            android:textColor="@color/a2"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="12dp"
            android:elevation="9dp"
            />


        <EditText
            android:id="@+id/register_pass2_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/et_sh4"
            android:hint="ReEnter Your Password..."
            android:inputType="textPassword"
            android:ems="10"
            android:padding="12dp"
            android:textColor="@color/a2"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="12dp"
            android:elevation="9dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_linear1"
        android:orientation="vertical">

        <Button
            android:id="@+id/register_create_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_linear2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_sh5"
            android:fontFamily="@font/poppins_blackitalic"
            android:padding="15dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <!--            <CheckBox-->
            <!--                android:id="@+id/checkBox"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="remember me"-->
            <!-- />-->

            <TextView
                android:id="@+id/create_notAdmin_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:text="You'r not an admin?"
                android:textColor="@color/a2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/create_Admin_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="40dp"
                android:padding="10dp"
                android:fontFamily="@font/poppins_re"
                android:text="You'r an admin?"
                android:textColor="@color/a2"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/register_google_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/squar_btn2"
                android:drawableLeft="@drawable/googleg_standard_color_18"
                android:text="Google"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"


                />

            <!--            <Button-->
            <!--                android:id="@+id/register_fb_btn"-->
            <!--                android:layout_width="150dp"-->
            <!--                android:layout_height="45dp"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:layout_marginEnd="4dp"-->
            <!--                android:background="@drawable/fb_btn"-->
            <!--                android:drawableLeft="@drawable/googleg_standard_color_18"-->
            <!--                android:text="Facebook"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:textSize="15sp"-->
            <!--                android:textStyle="bold" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/a2" />

        <TextView
            android:id="@+id/signintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:text="you have an account? Just Sign in"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>



</RelativeLayout>