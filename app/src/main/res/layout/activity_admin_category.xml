<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/squar_shape3"
    tools:context=".Admin.AdminCategoryActivity"
    tools:ignore="NotSibling">


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/a2">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backadmincat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_blackitalic"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/product_name_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_black"
                android:gravity="center"
                android:text="Admin management center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/raduis_lay">

        <TextView
            android:id="@+id/add_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/et_sh4"
            android:fontFamily="@font/poppins_re"
            android:padding="15dp"
            android:text="Add new product"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout

            android:id="@+id/category_linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_p"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/et_shadows"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/tshirts"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tshirts"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tshirts"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="t-shirts"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sports"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sports"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sports"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"

                    android:gravity="center"
                    android:text="sports"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/female_dress"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/female_dresses"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/female_dress"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"

                    android:gravity="center"
                    android:text="dresses"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout

            android:id="@+id/category_linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_shadows"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/glasses"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/glasses"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/glasses"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="glasses"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shoes"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/shoess"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shoes"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="sports"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/hats"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hats"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hats"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="dresses"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout

            android:id="@+id/category_linear_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_shadows"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/laptops"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/laptops"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/laptops"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="glasses"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/mobiles"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mobiles"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobiles"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="sports"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/headphone"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/headphoness"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headphone"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="dresses"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


        </LinearLayout>



        <LinearLayout

            android:id="@+id/category_linear_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_shadows"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView

                    android:id="@+id/speakers"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/speaker"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/speakers"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="speakers"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/phoneex"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/phoneex2"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phoneex"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="phone exe"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/chargers"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/headphoness"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chargers"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_re"
                    android:gravity="center"
                    android:text="chargers"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"

            >

            <Button
                android:id="@+id/maintainadmin"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/squar_btn3"
                android:fontFamily="@font/poppins_re"
                android:layout_margin="5dp"
                android:text="products"
                android:textSize="10dp" />

            <Button
                android:id="@+id/checkorders"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginEnd="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/squar_btn3"
                android:fontFamily="@font/poppins_re"
                android:text="orders"
                android:textSize="10dp" />

            <Button
                android:id="@+id/logout1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/squar_btn3"
                android:fontFamily="@font/poppins_re"
                android:text="Log out"
                android:textSize="10dp" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>